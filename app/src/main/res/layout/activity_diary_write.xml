<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/write_toolbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/write_toolbar_left_button_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/write_toolbar_back_button_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="24dp"
                android:visibility="gone"
                tools:src="@drawable/ic_back"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/write_toolbar_back_button_text"
                style="@style/WhiteTextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="24dp"
                android:visibility="gone"
                tools:text="@string/write_exit_cancel" />

        </FrameLayout>

        <TextView
            android:id="@+id/write_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/write_create_diary" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/write_toolbar_button"
            style="@style/WhiteTextButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/write_delivery" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/write_menu_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/write_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/write_polaroid_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_padding_24"
                android:layout_marginTop="@dimen/default_spacing_8"
                android:background="@drawable/bg_polaroid"
                android:padding="@dimen/default_padding_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/write_polaroid_image_container"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/write_no_contents_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/lightGray"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_plus" />

                    <com.xiaopo.flying.sticker.StickerView
                        android:id="@+id/write_sticker_contents_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:borderColor="@android:color/white"
                        app:showBorder="true"
                        app:showIcons="true">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/write_polaroid_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </com.xiaopo.flying.sticker.StickerView>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/write_title"
                    style="@style/WriteTitleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_padding_24"
                    android:hint="@string/write_hint_title"
                    android:textColorHint="@color/lightGray"
                    app:layout_constraintTop_toBottomOf="@id/write_polaroid_image_container" />

                <TextView
                    android:id="@+id/write_date"
                    style="@style/DateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_spacing_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/write_title"
                    tools:text="2021년 4월 21일" />

                <TextView
                    android:id="@+id/write_by"
                    style="@style/NameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_spacing_8"
                    android:text="@string/by"
                    app:layout_constraintBottom_toBottomOf="@id/write_date"
                    app:layout_constraintEnd_toStartOf="@id/write_writer"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toEndOf="@id/write_date"
                    app:layout_constraintTop_toTopOf="@id/write_date"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/write_writer"
                    style="@style/NameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/write_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/write_date"
                    tools:text="진유진진진진진진진진" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/write_contents"
                style="@style/WriteContentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_padding_24"
                android:layout_marginTop="@dimen/title_spacing_16"
                android:layout_marginBottom="@dimen/section_spacing_40"
                android:hint="@string/write_hint_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/write_polaroid_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/write_menu_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/systemGray02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/write_select_image_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_album"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/write_select_sticker_button"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/write_select_sticker_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_sticker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ViewStub
        android:id="@+id/stub_write_select_color_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout="@layout/layout_diary_write_select_color_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:indeterminateTint="@color/lightGray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>