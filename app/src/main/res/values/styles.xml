<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bg01</item>
        <item name="android:textColor">@color/text01</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:colorControlHighlight">@color/whiteAlpha20</item>
        <item name="android:statusBarColor">@color/statusbarColor</item>
        <item name="android:includeFontPadding">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rect_white_top_rounded_10</item>
    </style>

    <!-- title -->
    <style name="Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GmarketBold24" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="GmarketBold18" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="GmarketBold16" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="GmarketMedium20" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="GmarketMedium18" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="GmarketMedium16" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="GmarketMedium14" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="GmarketMedium12" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="NotoBold16" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="NotoBold14" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="NotoRegular16" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="NotoRegular14" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="NotoRegular12" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <!-- 일기 작성-->
    <style name="WriteTitleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/ggray01</item>
        <item name="android:textColorHint">@color/ggray04</item>
    </style>

    <style name="WriteContentEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text01</item>
        <item name="android:textColorHint">@color/text04</item>
    </style>

    <style name="WriteStickerListTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/tempgray06</item>
    </style>

    <style name="DateTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/tempgray04</item>
    </style>

    <style name="NameTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/systemBlue</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TransparentDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/title_spacing_16</item>
        <item name="android:paddingVertical">@dimen/item_spacing_12</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rect_white_rounded</item>
        <item name="android:backgroundTint">@color/bg04</item>
    </style>

    <style name="BlueButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/selector_button</item>
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="buttonBarButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored"></style>

    <style name="buttonBarButtonStyle.Negative">
        <item name="android:textColor">@color/tempgray04</item>
    </style>

    <style name="buttonBarButtonStyle.Positive">
        <item name="android:textColor">@color/systemRed</item>
    </style>

    <style name="ExitAlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textColor">@color/ggray01</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle.Negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!--    마이페이지-->
    <style name="MypageLabel" parent="NotoRegular12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text03</item>
    </style>

    <style name="MypageSectionTitle" parent="NotoRegular12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text04</item>
    </style>

    <style name="MypageItemLayout" parent="NotoRegular16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/title_spacing_16</item>
    </style>

    <style name="MypageItem" parent="NotoBold16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text01</item>
    </style>

    <style name="MyDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogCancel</item>
        <item name="android:textColor">@color/ggray01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogConfirm</item>
    </style>

    <style name="DialogCancel" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/tempgray04</item>
    </style>

    <style name="DialogConfirm" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/systemRed</item>
    </style>

    <style name="CommentItem" />

    <style name="CommentItem.Title">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/systemBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommentItem.Content">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CommentItem.Bottoms">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/text04</item>
    </style>

    <style name="CommentItem.Bottoms.Button">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:indeterminateTint">@color/tempgray04</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>
