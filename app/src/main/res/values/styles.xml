<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#434343</item>
        <item name="android:windowBackground">@color/systemGray01</item>
        <item name="android:textColor">@color/systemWhite</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- title -->
    <style name="Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GmarketBold24" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="GmarketBold18" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="GmarketBold16" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="GmarketMedium18" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="GmarketMedium14" parent="Content">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="NotoBold16" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="NotoBold14" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="NotoRegular16" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="NotoRegular14" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="NotoRegular12" parent="Content">
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <!-- 일기 작성-->
    <style name="WriteTitleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/gray01</item>
        <item name="android:textColorHint">@color/gray01</item>
    </style>

    <style name="WriteContentEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/gray05</item>
        <item name="android:textColorHint">@color/gray05</item>
    </style>

    <style name="WriteStickerListTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/gray06</item>
    </style>

    <style name="DateTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/gray03</item>
    </style>

    <style name="NameTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_ttf_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/systemBlue</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>